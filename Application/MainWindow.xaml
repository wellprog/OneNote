                <Border
                    Tag="SignUp"
                    Grid.Row="9"
                    Grid.Column="2"
                    Background="#dfd"
                    Margin="0,5,0,0"
                    MinWidth="150"
                    MaxWidth="150"
                    Opacity="0">
                    <TextBlock
                        x:Name="regSignUpTextBlock"
                        Text="SIGN UP"
                        GotFocus="TextBlock_GotFocus"
                        LostFocus="TextBlock_LostFocus"
                        MouseLeftButtonDown="SignupTextBlock_MouseLeftButtonDown"/>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Mouse.MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty="Background.Color"
                                            Duration="0:0:0.25"
                                            To="#ccc"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Mouse.MouseLeave">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty="Background.Color"
                                            Duration="0:0:0.25"
                                            To="#dfd"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </Border.Triggers>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
