                                                        BeginTime="0:0:0.2"
                                                        To="0.5,0.5"/>
                                                                <PointAnimation
                                                        Storyboard.TargetName="Temp"
                                                        Storyboard.TargetProperty="BorderBrush.(LinearGradientBrush.EndPoint)"
                                                        Duration="00:00:0.5"
                                                        BeginTime="0:0:0.2"
                                                        To="0.55,1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                            <Border
                                    Height="{TemplateBinding Height}"
                                    Width="{TemplateBinding Width}"
                                    Background="#fff"
                                    CornerRadius="10"
                                    BorderThickness="2"
                                    Padding="5,0,5,0"
                                    Cursor="Hand"
                                    x:Name="Temp">
                                                <Label
                                        Content="{TemplateBinding Content}"
                                        FontSize="{TemplateBinding FontSize}"
                                        FontWeight="{TemplateBinding FontWeight}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#ebebeb"/>
                                                </Border.Effect>
                                                <Border.BorderBrush>
                                                    <LinearGradientBrush StartPoint="0.5,0.5" EndPoint="0.55,1">
                                                        <GradientStop Color="Transparent" Offset="0"/>
                                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                                        <GradientStop Color="#e66f6f" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.BorderBrush>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                    <Label
                        HorizontalAlignment="Center"
                        Content="Pages"
                        FontSize="17"/>
                    <ListBox
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        SelectedIndex="{Binding PagesPanel.PageIndex, Mode=TwoWay}"
                        ItemsSource="{Binding PagesPanel.Pages}"
                        Width="200" Height="345">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Name}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Margin="0,5,0,0"
                        x:Name="AddSectionButton1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontSize="15"
                        Height="30"
                        Width="75"
                        Command="{Binding PagesPanel.AddCommand}"
                        Content="Add">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border
