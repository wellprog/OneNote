                                                                <PointAnimation
                                                                    Storyboard.TargetName="Temp"
                                                                    Storyboard.TargetProperty="BorderBrush.(LinearGradientBrush.EndPoint)"
                                                                    Duration="0:0:0.3"
                                                                    To="0.55,0"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation
                                                                    Storyboard.TargetName="Temp"
                                                                    Storyboard.TargetProperty="BorderBrush.(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                                    Duration="0:0:0.3"
                                                                    To="#82d77d"/>
                                                                <PointAnimation
                                                                    Storyboard.TargetName="Temp"
                                                                    Storyboard.TargetProperty="BorderBrush.(LinearGradientBrush.StartPoint)"
                                                                    Duration="0:0:0.3"
                                                                    To="1,0"/>
                                                                <PointAnimation
                                                                    Storyboard.TargetName="Temp"
                                                                    Storyboard.TargetProperty="BorderBrush.(LinearGradientBrush.EndPoint)"
                                                                    Duration="0:0:0.3"
                                                                    To="0.55,0"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation
                                                                    Storyboard.TargetName="Temp"
                                                                    Storyboard.TargetProperty="BorderBrush.(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                                    Duration="0:0:0.5"
                                                                    To="Transparent"/>
                                                                <PointAnimation
                                                                    Storyboard.TargetName="Temp"
                                                                    Storyboard.TargetProperty="BorderBrush.(LinearGradientBrush.StartPoint)"
                                                                    Duration="00:00:0.5"
                                                                    BeginTime="0:0:0.2"
                                                                    To="0.5,0.5"/>
                                                                <PointAnimation
