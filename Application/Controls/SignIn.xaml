<UserControl x:Class="OneNote.Application.Controls.SignIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OneNote.Application.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,50,0,0">
            <Label Content="login"  Width="250"/>
            <Border
                BorderThickness="1"
                BorderBrush="Black"
                Width="250">
                <TextBox TextAlignment="Center" Text="{Binding Login}" />
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <Label Content="password"  Width="250"/>
            <Border
                BorderThickness="1"
                BorderBrush="Black"
                Width="250">
                <TextBox TextAlignment="Center" Text="{Binding Password}" />
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <Button Content="SignIn"
                    Width="250"
                    Command="{Binding SignIn}"/>
        </StackPanel>

    </Grid>
</UserControl>
